@model IEnumerable<CategoryViewModel>

@{
    ViewBag.PageTitle = "Manage Categories";
    ViewBag.CardTitle = "List Of Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<form class="my-3" asp-action="Index" asp-controller="Categories">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.CreatedDate)
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.CreatedDate
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Categories" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                </td>
                
                <td>
                    <a asp-action="Delete" asp-controller="Categories" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
