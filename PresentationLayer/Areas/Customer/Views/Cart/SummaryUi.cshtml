@model ShoppingCartViewModel
@using Microsoft.Extensions.Options

@inject IOptions<StripeData> Stripe

@{
    ViewData["Title"] = "SummaryUi";
    Layout = "~/Views/Shared/_Customer.cshtml";
}
<style>
    @@media (min-width: 1025px) {
        .h-custom {
            height: 100vh !important;
        }
    }
</style>
<form method="post" asp-action="SummaryUi">
    <section class="h-100 h-custom">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card shadow-2-strong mb-5 mb-lg-0" style="border-radius: 16px;">
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-xl-6">
                                    <div class="row">
                                        <div class="col-12 ">
                                            <input hidden asp-for="CartTotalPrice" />
                                            <div data-mdb-input-init class="form-outline mb-2 mb-xl-3">
                                                <label class="form-label" for="typeName">Name </label>
                                                <input asp-for="@Model.OrderHeader.Name" type="text" class="form-control form-control-lg" siez="17"
                                                       placeholder="John Smith" />
                                            </div>
                                            @* <div data-mdb-input-init class="form-outline mb-2 mb-xl-3">
                                            <label class="form-label" for="typeExp">Email </label>
                                            <input asp-for="@Model.OrderHeader.ApplicationUser.Email" type="email" class="form-control form-control-lg" />
                                            </div> *@
                                        </div>
                                        <div class="col-12 row">
                                            <div data-mdb-input-init class="form-outline mb-2 mb-xl-3 col-xl-6">
                                                <label class="form-label">City</label>
                                                <input asp-for="@Model.OrderHeader.City" class="form-control form-control-lg" siez="17"
                                                       minlength="19" maxlength="19" />
                                            </div>

                                            <div data-mdb-input-init class="form-outline mb-2 mb-xl-3 col-xl-6">
                                                <label class="form-label">Phone Number</label>
                                                <input asp-for="@Model.OrderHeader.Phone" class="form-control form-control-lg" />
                                            </div>
                                        </div>
                                        <div class="col-12 ">
                                            <div data-mdb-input-init class="form-outline mb-2 mb-xl-3">
                                                <label class="form-label" for="typeName">Address </label>
                                                <input asp-for="@Model.OrderHeader.Address" class="form-control form-control-lg" siez="17" />
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-6 col-xl-6">
                                    <div class="d-flex justify-content-between" style="font-weight: 500;">
                                        <p class="mb-2">Subtotal</p>
                                        <p class="mb-2">$@Model.CartTotalPrice</p>
                                    </div>

                                    <div class="d-flex justify-content-between" style="font-weight: 500;">
                                        <p class="mb-0">Shipping</p>
                                        <p class="mb-0">$2.99</p>
                                    </div>

                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between mb-4" style="font-weight: 500;">
                                        <p class="mb-2">Total (tax included)</p>
                                        <p class="mb-2">$@Model.CartTotalPrice</p>
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-block btn-lg">
                                        <div class="d-flex justify-content-between">
                                            <span>Checkout</span>
                                            <span>$26.48</span>
                                        </div>
                                    </button>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
